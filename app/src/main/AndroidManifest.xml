<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jju.edu.aiqiyi"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PageActivity">
        </activity>
        <activity android:name=".DaoHangActivity"></activity>
        <activity android:name=".HuiYuanActivity"></activity>
        <activity android:name=".TuiJianActivity"></activity>
        <activity android:name=".JiaoYouActivity"></activity>
        <activity android:name=".WoDeActivity"></activity>
        <activity android:name=".PlayerActivity"></activity>
        <activity android:name=".VideoActivity"></activity>
        <activity android:name=".wode.LocalVideoActivity"></activity>
        <activity android:name=".wode.PlayHistoryActivity"></activity>
        <activity android:name=".wode.SearchActivity"></activity>
        <activity android:name=".wode.SearchResultActivity"></activity>
        <activity android:name=".VideoPlayer"></activity>
        <activity android:name=".zxing.activity.CaptureActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>

</manifest>