<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_dongman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_dongman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_dongman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="动漫"
                    android:textColor="#b6000000"
                    android:textSize="16sp"/>
            </LinearLayout>

            <GridView
                android:id="@+id/gridview_dongman"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:numColumns="3"
                android:verticalSpacing="20dp">

            </GridView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#dcd5d5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#161616"
                        android:text="最近更新"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="更多"
                        android:id="@+id/dm_text_more01" />
                </RelativeLayout>
                <GridView
                    android:id="@+id/dm_grid_view01"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="441dp"
                    android:numColumns="auto_fit"></GridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#161616"
                        android:text="少儿剧场"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="更多"
                        android:id="@+id/dm_text_more02" />
                </RelativeLayout>
                <GridView
                    android:id="@+id/dm_grid_view02"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="441dp"
                    android:numColumns="3"></GridView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>